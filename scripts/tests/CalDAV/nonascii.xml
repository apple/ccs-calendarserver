		</test>
		<test name='2'>
			<description>Check valid CN</description>
			<request user="$i18nid:" pswd="$i18npswd:">
				<method>GET</method>
				<ruri>$i18ncalendarpath:/cntest.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/nonascii/14.ics</value>
					</arg>
				</verify>
