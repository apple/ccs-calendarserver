	<test-suite name='GET well-known'>
		<test name='1'>
			<description>GET on well-known resource</description>
			<request>
				<method>GET</method>
				<ruri>/.well-known/timezone</ruri>
				<verify>
					<callback>statusCode</callback>
					<arg>
						<name>status</name>
						<value>301</value>
					</arg>
				</verify>
			</request>
		</test>
	</test-suite>

