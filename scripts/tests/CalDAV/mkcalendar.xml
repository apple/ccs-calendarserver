				</verify>
				<verify>
					<callback>propfindValues</callback>
					<arg>
						<name>only</name>
						<value>$taskspath1:/</value>
					</arg>
					<arg>
						<name>props</name>
						<value>{urn:ietf:params:xml:ns:caldav}supported-calendar-component-set$.*VTODO.*</value>
					</arg>
				</verify>
