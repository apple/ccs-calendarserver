<caldavtest>
	<description>Test implicit scheduling to ensure freebusy updates correctly</description>

	<require-feature>
		<feature>caldav</feature>
		<feature>implicit-scheduling</feature>
	</require-feature>

	<start>
		<request user="$userid1:" pswd="$pswd1:">
			<method>GET</method>
			<ruri>$calendarpath1:/</ruri>
		</request>
		<request user="$userid2:" pswd="$pswd2:">
			<method>GET</method>
			<ruri>$calendarpath2:/</ruri>
		</request>
		<request user="$userid1:" pswd="$pswd1:">
			<method>DELETEALL</method>
			<ruri>$calendarpath1:/</ruri>
			<ruri>$inboxpath1:/</ruri>
		</request>
		<request user="$userid2:" pswd="$pswd2:">
			<method>DELETEALL</method>
			<ruri>$calendarpath2:/</ruri>
			<ruri>$inboxpath2:/</ruri>
		</request>
	</start>
	
	<test-suite name='Organizer invites Attendee and checks free busy'>
		<test name='1'>
			<description>Organizer invites Attendee</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/1.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='2'>
			<description>Organizer checks data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/instancecancel/2.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>Attendee Inbox Item</description>
			<request user="$userid2:" pswd="$pswd2:">
				<method>WAITDELETEALL 1</method>
				<ruri>$inboxpath2:/</ruri>
			</request>
		</test>
		<test name='4'>
			<description>Attendee has data</description>
			<request user="$userid2:" pswd="$pswd2:">
				<method>GETNEW</method>
				<ruri>$calendarpath2:/</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/instancecancel/3.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='6'>
			<description>Attendee free</description>
			<request>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/4.ics</filepath>
				</data>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr1:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr2:</value>
					</arg>
					<arg>
						<name>busy</name>
					</arg>
				</verify>
			</request>
		</test>
		<test name='7'>
			<description>Attendee -> Accepted</description>
			<request user="$userid2:" pswd="$pswd2:">
				<method>GETNEW</method>
				<ruri>$calendarpath2:/</ruri>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>PUT</method>
				<ruri>$</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/5.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='8'>
			<description>Organizer Inbox Item</description>
			<request>
				<method>WAITDELETEALL 1</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
		</test>
		<test name='10'>
			<description>Attendee busy</description>
			<request>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/4.ics</filepath>
				</data>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr1:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr2:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='11'>
			<description>Attendee -> EXDATE one instance</description>
			<request user="$userid2:" pswd="$pswd2:">
				<method>GETNEW</method>
				<ruri>$calendarpath2:/</ruri>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>PUT</method>
				<ruri>$</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/6.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='12'>
			<description>Organizer Inbox Item</description>
			<request>
				<method>WAITDELETEALL 1</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
		</test>
		<test name='14'>
			<description>Attendee free</description>
			<request>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/instancecancel/4.ics</filepath>
				</data>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr1:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr2:</value>
					</arg>
					<arg>
						<name>busy</name>
					</arg>
				</verify>
			</request>
		</test>
		<test name='-1'>
			<description>Clean-up</description>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$calendarpath1:/</ruri>
				<ruri>$inboxpath1:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>WAITDELETEALL 1</method>
				<ruri>$inboxpath2:/</ruri>
			</request>
			<request user="$userid2:" pswd="$pswd2:">
				<method>DELETEALL</method>
				<ruri>$calendarpath2:/</ruri>
			</request>
		</test>
	</test-suite>
	
	<test-suite name='Organizer invites auto-accept Attendee and checks free busy'>
		<test name='1'>
			<description>Organizer invites Resource</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/autocancel/1.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
			<request>
				<method>WAITDELETEALL 1</method>
				<ruri>$inboxpath1:/</ruri>
			</request>
		</test>
		<test name='2'>
			<description>Organizer checks data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/autocancel/2.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='3'>
			<description>Resource has data</description>
			<request user="$useradmin:" pswd="$pswdadmin:">
				<method>GETNEW</method>
				<ruri>$rcalendarpath1:/</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/autocancel/3.ics</value>
					</arg>
				</verify>
				<graburi>$rresource:</graburi>
			</request>
		</test>
		<test name='4'>
			<description>Resource busy</description>
			<request>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/autocancel/4.ics</filepath>
				</data>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr1:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$rcuaddralt1:</value>
					</arg>
					<arg>
						<name>busy</name>
						<value>$now.year.1:0102T150000Z/$now.year.1:0102T160000Z</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='5'>
			<description>Organizer cancels one instance</description>
			<request>
				<method>PUT</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/autocancel/5.ics</filepath>
				</data>
				<verify>
					<callback>statusCode</callback>
				</verify>
			</request>
		</test>
		<test name='6'>
			<description>Organizer checks data</description>
			<request>
				<method>GET</method>
				<ruri>$calendarpath1:/1.ics</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/autocancel/6.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='7'>
			<description>Resource has data</description>
			<request user="$useradmin:" pswd="$pswdadmin:">
				<method>GETCHANGED</method>
				<ruri>$rresource:</ruri>
				<verify>
					<callback>calendarDataMatch</callback>
					<arg>
						<name>filepath</name>
						<value>Resource/CalDAV/implicit/freebusy/autocancel/7.ics</value>
					</arg>
				</verify>
			</request>
		</test>
		<test name='8'>
			<description>Attendee free</description>
			<request>
				<method>POST</method>
				<ruri>$outboxpath1:/</ruri>
				<data>
					<content-type>text/calendar; charset=utf-8</content-type>
					<filepath>Resource/CalDAV/implicit/freebusy/autocancel/4.ics</filepath>
				</data>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$cuaddr1:</value>
					</arg>
					<arg>
						<name>busy</name>
					</arg>
				</verify>
				<verify>
					<callback>postFreeBusy</callback>
					<arg>
						<name>attendee</name>
						<value>$rcuaddralt1:</value>
					</arg>
					<arg>
						<name>busy</name>
					</arg>
				</verify>
			</request>
		</test>
		<test name='-1'>
			<description>Clean-up</description>
			<request user="$userid1:" pswd="$pswd1:">
				<method>DELETEALL</method>
				<ruri>$calendarpath1:/</ruri>
				<ruri>$inboxpath1:/</ruri>
			</request>
			<request user="$useradmin:" pswd="$pswdadmin:">
				<method>WAITCOUNT 0</method>
				<ruri>$rcalendarpath1:/</ruri>
			</request>
		</test>
	</test-suite>
	
	<end/>
	
</caldavtest>
